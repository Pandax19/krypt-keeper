<section class="whitefont">

    
<h2 class="header">Attractions Near You</h2>
<br>
<input id="searchZip" style="color:black;" type="text" placeholder="Search by Zipcode" />
<button id="searchButton" type="submit">Search</button>
<div id ="myCards">
{{#each events as |event|}}
<div id="event-card">

    <a href="/singleAttraction/{{id}}"><h3 id="event-title">{{title}}</h3></a>

    <h4 id="event-date">{{date}}</h4>

    <p id="event-desc">{{description}}</p>

<button class="fave" data-event_id={{id}} data-user_id={{thisUser}}>Add to Favorites</button>

</div>
{{/each}} 
</div>
</section>

<script src="/js/attractions.js"></script>
